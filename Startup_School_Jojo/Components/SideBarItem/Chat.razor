<div class="sidebar-window workspaces @view">
    <div class="sidebar-head">
        <p class="sidebar-name">Chat</p>
        
    </div>

    @if (_components.Count > 0)
    {
        <ul class="workspaces-list">
            @foreach (var component in _components)
            {
                <li class="workspaces-item workspace">
                    <div class="workspace-name">@component.Name</div>
                    @* <ul>
                        @foreach (var module in component.Modules)
                        {
                            <li>@module</li>
                        }
                    </ul>
                    <p>Created: @component.CreatedDate.ToString("yyyy.MM.dd HH:mm:ss")</p> *@
                    <div class="workspace-pancil"><i class="fa-solid fa-pencil"></i></div>
                    <div class="workspace-trash"><i class="fa-regular fa-trash-can"></i></div>
                </li>
            }
        </ul>
    }

</div>

<style>
    .workspaces-item{
        height: 24px;
        background-color: #00000040;
        display: flex;
        flex-direction: row;
        font-size: 13px;
        align-items: center;
        border-radius: 5px;
        margin: 8px;
    }
    .workspaces-item div{
        margin: 0 2px;
    }
    .workspace-name{
        flex-grow: 1;
    }
</style>

@code {
    [Parameter]
    public string? view { get; set; }
    private List<Component> _components = new List<Component>();

    protected override void OnInitialized()
    {
        LoadComponentsFromJsonFiles();
    }

    private void LoadComponentsFromJsonFiles()
    {
        var jsonFiles = Directory.GetFiles(Path.Combine("Components", "ClientWorkspaces"), "Workspace*.json");

        foreach (var jsonFile in jsonFiles)
        {
            var json = File.ReadAllText(jsonFile);
            var component = JsonConvert.DeserializeObject<Component>(json);
            _components.Add(component);
        }
    }

    public class Component
    {
        public string Name { get; set; }
        public List<string> Modules { get; set; }
        public DateTime CreatedDate { get; set; }
    }
}
